//-------------------------------------------------------------------------------
  @name: Input Form
  -------------------------------------------------------------------------------//

//- Input Form
.fi-row
  ='\n'
  label(class='fi-label' for=data.id) !{data.label}
  ='\n'
  //- fi upload
  if data.id === 'upload'
    ='\n'
    .fi-upload
      ='\n'
      input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target autocomplete='off')/
      ='\n'
      p.fi-upload__text !{data.placeholder}
      ='\n'
      button(type='button').btn.btn--upload Upload
  //- fi multiline
  else if data.id === 'multiline'
    textarea(class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target)
  //- fi dropdown
  else if data.id === 'dropdown'
    .fi-dropdown
      ='\n'
      input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target autocomplete='off')/
      ='\n'
      p.fi-dropdown__text
      ul.fi-dropdown-menu
        each valDrop in data.dropdown
          li.fi-dropdown-item(data-value=valDrop.value) !{valDrop.text}
  //- fi default
  else
    ='\n'
    input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target autocomplete='off')/
    ='\n'

  //- element fi subdomain
  if data.id === 'subdomain'
    button(type='button' class='btn btn--primary') Cek Domain

  //- element fi order
  if data.id === 'order'
    p.fi-desc !{data.desc}

  //- element fi data & time
  if data.icon !== undefinend
    ='\n'
    i(class=data.icon)

  //- error validation
  p.fi-alert(id=data.target data-req=data.required data-invalid=data.invalid data-invalid-phone=data.invalidPhone)
