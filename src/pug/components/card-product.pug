//-------------------------------------------------------------------------------
  @name: Components Product Card
  -------------------------------------------------------------------------------//

// best-product-item
.best-product__card
  .best-product__card__box
    a.best-product__card__link(href=data.to)
    .best-product__card__img
      ='\n'
      img.best-product__card__img__el(src='assets/img/dummy/'+data.img alt=data.title)/
    .best-product__card__txt
      h3.best-product__card__title !{data.title}
      p.best-product__card__desc !{data.desc}
      if data.percentage !== undefined
        span.best-product__card__percentage !{data.percentage}
        span.best-product__card__price-carret !{data.priceCarret}
      p.best-product__card__price-product !{data.price}
='\n'