//-------------------------------------------------------------------------------
  @name: Components Product Card
  -------------------------------------------------------------------------------//

// card-product-item
.card-product__card
  .card-product__card__box
    ='\n'
    a.card-product__card__link(href=data.to)
    .card-product__card__img
      ='\n'
      img.card-product__card__img__el(src='assets/img/dummy/'+data.img alt=data.title)/
    .card-product__card__txt
      h3.card-product__card__title !{data.title}
      if data.percentage !== undefined
        .card-product__card__sale
          ='\n'
          span.card-product__card__percentage !{data.percentage}
          ='\n'
          span.card-product__card__price-carret !{data.priceCarret}
      p.card-product__card__price-product !{data.price}
='\n'